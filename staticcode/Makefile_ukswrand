LIBUKSWRAND = ukswrand
SRCS = $(wildcard $(LIBUKSWRAND)/*.c)
CMDS = $(patsubst $(LIBUKSWRAND)/%.c,$(LIBUKSWRAND)/%.o,$(SRCS))
INCLUDES = -I./include -Iplat/kvm/include/kvm -Inolibc/include -Ilibelf/include -I./plat/kvm/include \
-Iukswrand/include
CFLAGS = -nostdinc -nostdlib -U __linux__ -U __FreeBSD__ -U __sun__ -fno-stack-protector -fno-omit-frame-pointer \
-fno-tree-sra -Wall -Wextra -D __Unikraft__ -DUK_CODENAME="Rhea" -DUK_VERSION=0.4 -DUK_FULLVERSION=0.4.0~0453b2e \
-O0 -fno-optimize-sibling-calls -fno-tree-vectorize -no-pie -D__X86_64__ -m64 -mno-red-zone -fno-reorder-blocks \
-fno-asynchronous-unwind-tables  -mtune=generic  -DCC_VERSION=7.5  -fno-builtin-printf -fno-builtin-fprintf \
-fno-builtin-sprintf -fno-builtin-snprintf -fno-builtin-vprintf -fno-builtin-vfprintf -fno-builtin-vsprintf \
-fno-builtin-vsnprintf -fno-builtin-scanf -fno-builtin-fscanf -fno-builtin-sscanf -fno-builtin-vscanf \
-fno-builtin-vfscanf -fno-builtin-vsscanf -DKVMPLAT -g3 -D__LIBNAME__=ukswrand

all: $(CMDS) link obj_copy

$(LIBUKSWRAND)/%.o: $(LIBUKSWRAND)/%.c
	gcc $(INCLUDES) \
	 $(CFLAGS) \
	-D__BASENAME__=$(subst $(LIBUKSWRAND)/,,$<) \
	-c $< \
	-o build/ukswrand/$(subst $(LIBUKSWRAND)/,,$@) \
	-Wp,-MD,build/ukswrand/.$(subst $(LIBUKSWRAND)/,,$@).d \

link:
	gcc -nostdinc -nostdlib -Wl,--omagic -Wl,-r -Wl,-d -Wl,--build-id=none -no-pie \
	$(patsubst $(LIBUKSWRAND)/%.o,build/ukswrand/%.o,$(CMDS)) \
	-Wl,--start-group -Wl,--end-group -o build/ukswrand.ld.o \

obj_copy:
	objcopy --keep-global-symbols=ukswrand/exportsyms.uk -w -L __* build/ukswrand.ld.o build/ukswrand.o \

clean:
	rm -rf build/ukswrand/* build/ukswrand/.*.o.d build/ukswrand.ld.o build/ukswrand.o